{% extends '@website/base.html.twig' %}

{% block title %}
    {{ parent() }} | Concorsi
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="head-line">
            <i class="bi-heart text-danger"></i>
            Ultimi Concorsi
        </h1>

        {% for concorso in pager %}
            <a href="{{ path('website_concorso_show', {'id': concorso.id }) }}" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                <img src="https://github.com/twbs.png" alt="twbs" class="rounded-circle flex-shrink-0" width="32" height="32">
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div>
                        <h6 class="mb-0">{{ concorso.title }}</h6>
                        <p class="mb-0 opacity-75">
{#                            {{ concorso.body }} <br>#}
                            {{ concorso.id }}
                        </p>
                    </div>
                    <div>
                        <h6 class="mb-0">Permalink</h6>
                        <p class="mb-0 opacity-75">
{#                            {{ concorso.permalink }}#}
                        </p>
                    </div>
                    <div>
                        <h6 class="mb-0">Scade</h6>
                        <p class="mb-0 opacity-75">
{#                            {{ concorso.expire }}#}
                        </p>
                    </div>
                    <div>
                        <h6 class="mb-0">Ente</h6>
                        <p class="mb-0 opacity-75">
{#                            {{ concorso.ente }}#}
                        </p>
                    </div>
                    <small class="opacity-50 text-nowrap">1w</small>
                </div>
            </a>

        {% endfor %}
        {{ pagerfanta(pager) }}
    </div>

{% endblock %}
